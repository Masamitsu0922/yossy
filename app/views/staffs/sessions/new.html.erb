<section class="slice slice-lg sct-color-1">
  <div class = "container">
    <div class ="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="form style-1 rounded has-shadow-1">
          <div class="form-header text-center ">
            <h2>スタッフログイン</h2>
          </div>
          <div class="form-body">
            <div class="row">
              <div class="col-xs-ofset-1 col-xs-10">
                <div class="form-message-box">
                  <p class="form-message">登録情報を入力してください。</p>
              </div>
            </div>
          </div>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group has-icon">
              <label class="control-label sr-only" >店舗ID</label>
              <%= f.text_field :shop_id_for_sign, autofocus: false, autocomplete: true,class:"form-control", placeholder: "店舗ID" %>
            </div>

              <div class="form-group has-icon">
                <label class="control-label sr-only" for="inputEmail">名前</label>
                <%= f.text_field :name, autofocus: true, autocomplete: true,class:"form-control", placeholder: "名前" %>
              </div>

              <div class="form-group has-icon">
                <label class="control-label sr-only" for="inputEmail">パスワード</label>
                <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputEmail", placeholder: "パスワード" %>
              </div>
                <%= f.submit "ログイン", class:"sign-in btn btn-lg btn-block btn-base-1 mt-20" %>
            <% end %>

