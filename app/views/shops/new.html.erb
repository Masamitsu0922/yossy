<h1>店舗新規登録</h1>
    <%= form_with model: @shop, local: true do |f| %>

        <%= f.label :name, "店舗名" %>
        <%= f.text_field :name %><br>
        <%= f.label :email, "メールアドレス" %>
        <%= f.text_field :email %><br>
        <%= f.label :postal_code, "郵便番号" %>
        <%= f.text_field :postal_code %><br>
        <%= f.label :address, "住所" %>
        <%= f.text_field :address %><br>
        <%= f.label :shop_id, "店舗認証用ID" %>
        <%= f.text_field :shop_id %><br>
        <%= f.label :password, "パスワード" %>
        <%= f.text_field :password %>
        <%= f.label :password_verification, "パスワード" %>
        <%= f.text_field :password_verification %>
       <%= f.submit "新規登録" %>
<% end %>