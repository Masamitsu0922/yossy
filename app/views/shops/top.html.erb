<div class="container">
	<div class="row">
		<div class="col-md-12">
				<%= link_to "キャスト一覧",shop_girls_path(@shop.id) %>

			<% if @shop.today.today_girls == [] %>
				<%= link_to "開店準備", new_shop_todays_path(@shop.id) %>
			<% else %>
				<%= link_to "出勤一覧", shop_todays_index_path(@shop.id) %>
				<%= link_to "入店", new_shop_table_path(@shop.id) %>
				<%= link_to "回転", shop_roll_path(@shop.id) %>
			<% end %>

			<% if owner_signed_in? %>
				<% if current_owner.owner_shops.find_by(shop_id:@shop.id).is_authority == true %>
					<%= link_to "商品登録", new_shop_product_path(@shop.id) %>
					<%= link_to "日報", shop_mounth_grade_today_grade_path(@shop.id,@mounth_grade.id,@today_grade.id) %>
					<%= link_to "スタッフ一覧", shop_staffs_path(@shop.id) %>
				<% end %>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-2">
			<h2 class="shops_index"><%= @shop.name %> 店舗トップ</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-2">


			<table>
				<tr><th>出勤</th><td><%= @today_girls.count %>人</td></tr>
				<tr><th>客数</th><td><%= @costomers%>人</td></tr>
				<tr><th>プラマイ</th><td><%= @today_girls.count - @costomers%></td></tr>
				<tr><th></th><td></td></tr>
			</table>

			<% @shop.table.times do |i| %>
				<% if @shop.today.tables.find_by(number: i+1) != nil %>
				<%=link_to shop_table_path(@shop.id,@shop.today.tables.find_by(number: i+1).id) do %>
					<%= i+1 %>卓<br>
				<% end %>
				<% else %>
				<%= i+1 %>卓<br>
				<% end %>
				<% table = @shop.today.tables.find_by(number: i+1) %>
				<% if table != nil %>
				客数:<%=table.member %><br>
					<% if table.table_girls != [] %>
					<!-- すでに発生していた場合の処理 -->
						最短アウト時刻: <%= (table.time + (table.set_time * 60)).strftime('%H:%M') %><br>
						キャスト:
						<% table.table_girls.each do |table_girl| %>
							<% if table_girl.today_girl_id != nil %>
							<!-- テーブルにキャストがついていたら名前を表示 -->
								<%= table_girl.today_girl.name %>
								<% if table_girl.name_status == 0 %>
								<%= link_to "場内指名する",shop_table_table_girl_path(@shop.id,table.id,table_girl.id),method: :patch %>
								<% elsif table_girl.name_status == 1 %>
								本指名
								<% elsif table_girl.name_status == 2 %>
								場内
								<% elsif table_girl.name_status == 3 %>
								同伴
								<% end %>
							<% end %>
						<% end %>
					<% else %>
						<%= link_to "発生",shop_table_occurrence_path(@shop.id,table.id) %>
					<% end %>
				<% end %><br>
			<% end %>
		</div>
	</div>
</div>